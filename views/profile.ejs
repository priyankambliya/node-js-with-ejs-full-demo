<body>

    <%- include('../views/header.ejs') %>

        <main>
        </main>

        <div>
            <h4 style="margin-top: 20px;margin-left: 750px;">ADMIN PROFILE</h4>
            <div>
                <img src="<%= admin.image %>" style="vertical-align: middle;border-radius: 50px;
        margin: 20px 0px; margin-left: 800px;" height="70px" width="70px" alt="admin-Image">
                <button id="btn" style="margin-left: 40px;" class="btn btn-secondary">update</button>
            </div>
            <div id="name-div" style="display: flex;
    margin-left: 700px;margin-top: 20px;">
                <label style="margin-top: 7px;
            margin-right: 100px;" for="staticEmail2" class="sr-only">Name</label>
                <input type="text" readonly class="form-control-plaintext" pxid="staticEmail2"
                    value="<%= admin.name %>">
                <br>
            </div>
            <div id="email-div" style="display: flex;
    margin-left: 700px;margin-top: 20px;">
                <label style="margin-top: 7px;
            margin-right: 100px;" for="staticEmail2" class="sr-only">Email</label>
                <input type="text" readonly class="form-control-plaintext" id="staticEmail2" value="<%= admin.email %>">
            </div>
            <div id="address-div" style="display: flex;
    margin-left: 700px;margin-top: 20px;">
                <label style="margin-top: 7px;
            margin-right: 100px;" for="staticEmail2" class="sr-only">Address</label>
                <input type="text" readonly class="form-control-plaintext" id="staticEmail2"
                    value="<%= admin.address %>">
            </div>
            <div id="mobile-div" style="display: flex;
    margin-left: 700px;margin-top: 20px;">
                <label style="margin-top: 7px;
            margin-right: 100px;" for="staticEmail2" class="sr-only">Mobile</label>
                <input type="text" readonly class="form-control-plaintext" id="staticEmail2"
                    value="<%= admin.mobile %>">
            </div>

        </div>
        <footer>
        </footer>
        <script>

            $(document).ready(function () {
                $('#btn').click(function () {
                    // alert('hitted..')

                    $.ajax({
                        url: "http://localhost:4000/api/admin/update-profile",
                        method: "GET",
                        success: function (data) {
                            // alert(data)
                            console.log(data)
                            window
                                .location = 'http://localhost:4000/api/admin/update-profile'
                        }
                    })
                })
            })
